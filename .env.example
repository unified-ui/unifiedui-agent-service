# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GIN_MODE=debug  # debug, release, test

# Cache Configuration
CACHE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=180

# Document DB Configuration
DOCDB_TYPE=mongodb
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=unifiedui

# Vault Configuration
VAULT_TYPE=dotenv  # Options: dotenv, azure, hashicorp

# Azure Key Vault (when VAULT_TYPE=azure)
AZURE_KEYVAULT_URL=https://myvault.vault.azure.net

# HashiCorp Vault (when VAULT_TYPE=hashicorp)
HASHICORP_VAULT_ADDR=http://localhost:8200
HASHICORP_VAULT_TOKEN=

# Encryption
SECRETS_ENCRYPTION_KEY=  # 32-byte base64 encoded key for credential encryption -> openssl rand -base64 32

# Platform Service
PLATFORM_SERVICE_URL=http://localhost:8081
PLATFORM_SERVICE_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
